{
  "name": "Python Student Workspace",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "editor.tabSize": 2,
        "editor.wordWrap": "on",
        "files.autoSave": "onWindowChange"
      },
      "extensions": [
        "ms-python.python",
        "ms-vsliveshare.vsliveshare"
      ]
    }
  }
}